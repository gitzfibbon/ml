<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <appSettings>

    <!--Full path to training set-->
    <add key="TrainingSetPath" value="C:\coding\ml\data\spam\train.txt"/>

    <!--Full path to training set-->
    <add key="TestingSetPath" value="C:\coding\ml\data\spam\test.txt"/>

    <!--Laplace Smoothing Parameter-->
